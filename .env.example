# Application Environment
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/ChurchApp1
APP_NAME="St. Thomas Aquinas Parish Church"
APP_KEY=base64:generate_a_secure_key_here

# Database Configuration
DB_CONNECTION=sqlite
DB_DATABASE=/path/to/your/database/st_thomas_aquinas_parish_events.db

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail Configuration (if needed)
# MAIL_MAILER=smtp
# MAIL_HOST=mailhog
# MAIL_PORT=1025
# MAIL_USERNAME=null
# MAIL_PASSWORD=null
# MAIL_ENCRYPTION=null
# MAIL_FROM_ADDRESS="hello@example.com"
# MAIL_FROM_NAME="${APP_NAME}"

# Default Admin User (change these after first login)
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=admin123

# Security
APP_DEBUG=true
APP_KEY=

# Set to true in production
APP_FORCE_HTTPS=false
